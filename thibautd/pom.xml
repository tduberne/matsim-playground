  <groupId>playground</groupId>
  <artifactId>thibautd</artifactId>
  <name>thibautd</name>
  <dependencies>
  	<dependency>
  		<groupId>playground</groupId>
  		<artifactId>ivtExt</artifactId>
  		<version>0.6.0-SNAPSHOT</version>
  	</dependency>
  	<dependency>
  		<groupId>org.matsim.contrib</groupId>
  		<artifactId>locationchoice</artifactId>
  		<version>0.6.0-SNAPSHOT</version>
  	</dependency>
